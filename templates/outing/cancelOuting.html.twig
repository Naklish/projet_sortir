{% extends 'base.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/cancelOuting.css') }}">
{% endblock %}

{% block title %}Modifier Sortie | {{ parent() }}{% endblock %}

{% block main %}
<h1>Annuler Sortie</h1>
<br>
    <main>
        <div>
            <p>Nom de la sortie : {{ outing.name }}</p>
            <p>Date de la sortie : {{ outing.dateHourStart|date('d-m-Y') }}</p>
            <p>Campus : {{ outing.campus.name }}</p>
            <p>Lieu : {{ outing.locations.name }}</p>
            {{ form_start(outingCancelForm) }}
            {{ form_row(outingCancelForm.cancelMotive) }}
            <div id="buttons" class="input-group">
                {{ form_row(outingCancelForm.register) }}
                <a href="{{ path('home') }}" id="btn-cancel" class="btn btn-lg">Annuler</a>
            </div>
            {{ form_end(outingCancelForm) }}
        </div>
    </main>
{% endblock %}