{% extends 'base.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}
{% block title %}
    Connexion
{% endblock %}

{% block main %}
    <main class="row">
        <div class="offset-md-3 col-md-6">
        <form class="form-login" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="inputUsername">Pseudo :</label>
                <div class="col-sm-8">
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label" for="inputPassword">Mot de passe :</label>
                <div class="col-sm-8">
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <button id="btn-connexion" class="btn btn-outline-primary" type="submit">
                        Connexion
                    </button>
                </div>
                    <div class="col-sm-8">
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me" checked> Se souvenir de moi
                            </label>
                            <p><a href="#">Mot de passe oubli√©</a></p>
                        </div>
                    </div>
            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
        </form>
        </div>
    </main>
{% endblock %}